extends ../layout

block content
  h1= 'Register'

  form(method='POST', action='/auth/register')
    input(type='hidden', name='_method', value='POST')
    p Name
        input(type='text', name='name')
    p Email
        input(type='email', name='email')
    p Password
        input(type='password', name='password')
    p
        input(type='submit')